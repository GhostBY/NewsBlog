@model IQueryable<NewsBlog.Models.Entities.Article>
@{
    ViewData["Title"] = "Articles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <title>Companies</title>
</head>
<body>
    <div>
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Список компаний</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-center">ID</th>
                    <th>Заголовок</th>
                    <th class="text-center">Краткое описание</th>
                    
                </tr>
                @foreach (var item in Model)
            {
                    <tr>
                        <td class="text-right">@item.Id</td>
                        @*<td>@Html.ActionLink(item.Name, "CompanyEdit", new { item.Id })</td>*@
                        @*<td class="text-right">@item.Name</td>*@
                        <td class="text-center">@item.Title </td>
                        <td class="text-center">@item.ShortDiscription</td>

                        <td class="text-center">
                            @*@using (Html.BeginForm("DeleteCompany", "Home"))
                            {
                                @Html.Hidden("Id", item.Id)
                                <input type="submit"
                                       class="btn btn-default btn-xs"
                                       value="Удалить" />
                            }*@
                        </td>
                    </tr>
                }
            </table>
        </div>
        @*<div class="panel-footer">
            @Html.ActionLink("Добавить компанию", "CompanyCreate", null,
            new { @class = "btn btn-default" })
        </div>*@
    </div>
</body>
</html>

